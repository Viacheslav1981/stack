<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="6" author="Slava" context="common">
        <createTable tableName="users" schemaName="stack">
            <column name="id" type="bigint" remarks="идентификатор" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(255)" remarks="имя пользователя">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)" remarks="пароль">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="bigint" remarks="идентификатор роли">
            </column>

        </createTable>

        <addForeignKeyConstraint baseColumnNames="role_id"
                                 baseTableName="users"
                                 baseTableSchemaName="stack"
                                 constraintName="fk_role_id"
                                 referencedColumnNames="id"
                                 referencedTableName="roles"
                                 referencedTableSchemaName="stack"

        />

    </changeSet>

    <changeSet id="7" author="Slava" context="test">
